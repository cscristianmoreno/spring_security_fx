<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox spacing="25.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.auth.authentication.controller.configuration.ConfigurationController">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Configuración de acceso">
         <font>
            <Font name="Microsoft Sans Serif" size="18.0" />
         </font>
      </Text>
      <VBox>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Llave privada" />
            <TextArea fx:id="fieldPrivateKey" prefHeight="89.0" prefWidth="279.0" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Llave pública" />
            <TextArea fx:id="fieldPublicKey" prefHeight="89.0" prefWidth="279.0" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Duración del token (expresado en segundos)" />
            <TextField fx:id="fieldTokenDuration" prefHeight="25.0" prefWidth="202.0" />
         </children>
      </VBox>
      <Button mnemonicParsing="false" onMouseClicked="#onSave" text="Guardar" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
